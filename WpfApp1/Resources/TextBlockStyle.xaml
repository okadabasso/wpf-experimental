<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}" />
        <Setter Property="Foreground" Value="{StaticResource Gray800}" />
    </Style>
    <Style x:Key="TextBlock.Default" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}" />
        <Setter Property="Foreground" Value="{StaticResource Gray800}" />
    </Style>
    <Style x:Key="TextBlock.Large" TargetType="TextBlock" BasedOn="{StaticResource TextBlock.Default}">
        <Setter Property="FontSize" Value="{StaticResource LargeFontSize}" />
    </Style>
    <Style x:Key="TextBlock.PageHeader" TargetType="TextBlock" BasedOn="{StaticResource TextBlock.Default}">
        <Setter Property="FontSize" Value="{StaticResource LargeFontSize}" />
    </Style>
</ResourceDictionary>