<UserControl x:Class="WpfApp1.Views.TabView1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Margin="8" >
        <StackPanel DockPanel.Dock="Bottom" Margin="0,16,0,0" HorizontalAlignment="Left">
           <Button Content="Close Tab" Command="{Binding CloseTabCommand}" Width="100"/>
        </StackPanel>
        <Grid >
        <StackPanel Orientation="Vertical" >
            <TextBlock Text="{Binding Header}" FontSize="16"/>
            <TextBlock Text="{Binding Message}" FontSize="16"/>
         </StackPanel>
        </Grid>
    </DockPanel>
</UserControl>
