<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:views="clr-namespace:WpfApp1.Views"
        xmlns:viewModels="clr-namespace:WpfApp1.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <FontFamily x:Key="FAFont">pack://application:,,,/WpfApp1;component/Assets/fontawesome/otfs/Font Awesome 6 Free-Solid-900.otf#Font Awesome 6 Free Solid</FontFamily>

        <!-- スライドインアニメーション -->
        <Storyboard x:Key="SlideIn">
            <DoubleAnimation
                Storyboard.TargetName="NavigationMenu"
                Storyboard.TargetProperty="Width"
                From="50" To="250" Duration="0:0:0.3" />
        </Storyboard>

        <Storyboard x:Key="SlideOut">
            <DoubleAnimation
                Storyboard.TargetName="NavigationMenu"
                Storyboard.TargetProperty="Width"
                From="250" To="50" Duration="0:0:0.3" />
        </Storyboard>

        <!-- WidthToVisibilityConverterの追加 -->
        <local:WidthToVisibilityConverter x:Key="WidthToVisibilityConverter" />
        <!-- ListBoxItemのスタイル -->
        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Name="Border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="2">
                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF0C7D9D"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF1E90FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="#2D2D30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="8,4">
                <Button x:Name="MenuButton" 
                        Click="MenuButton_Click" 
                        BorderThickness="0"
                        FontSize="16"
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center" 
                         Background="#2D2D30" Foreground="White" >
                    <Button.Content>
                        <TextBlock FontFamily="{StaticResource FAFont}" Text="&#xf0c9;" FontSize="16" VerticalAlignment="Center" />
                    </Button.Content>
                </Button>
            </Grid>
            <ListBox Grid.Row="1" x:Name="NavigationMenu"
                     ItemsSource="{Binding NavigationItems}"
                     SelectionChanged="NavigationMenu_SelectionChanged"
                     Background="#2D2D30" Foreground="White"
                     BorderBrush="Transparent" Width="40"
                     Padding="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                     >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Height="32" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" FontFamily="{StaticResource FAFont}" 
                                       Text="{Binding Icon}" 
                                       FontSize="16" 
                                       
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" 
                                       />
                            <TextBlock Grid.Column="1" Text="{Binding Text}"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding RelativeSource={RelativeSource AncestorType=ListBox}, Path=Width, Converter={StaticResource WidthToVisibilityConverter}}"
                                       />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <Frame Grid.Column="1" Name="ContentFrame" NavigationUIVisibility="Hidden" Padding="10, 5" />
    </Grid>
</Window>